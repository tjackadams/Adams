<EditForm Model="@_model" OnSubmit="@SubmitAsync">
    <MudDialog>
        <DialogContent>
            <MudCard>
                <FluentValidationValidator DisableAssemblyScanning="@true" @ref="@_clientValidator"/>
                <ServerValidator @ref="@_serverValidator"/>
                <MudCardContent>
                    <MudTextField @bind-Value="_model.Name"
                                  For="@(() => _model.Name)"
                                  Immediate="true" 
                                  Label="Client Name"
                                  HelperText="@($"Max 20 characters {_model.Name?.Length ?? 0}/20")"/>
                </MudCardContent>
            </MudCard>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit">Create</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>