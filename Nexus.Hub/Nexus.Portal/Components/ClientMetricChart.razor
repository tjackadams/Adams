<MudGrid>
    @if (_series is not null && _xAxisLabels is not null)
    {
        <MudItem xs="12">
            <MudChart ChartType="ChartType.Line"
                  ChartSeries="_series"
                  @bind-SelectedIndex="Index"
                  XAxisLabels="_xAxisLabels"
                  Width="100%"
                  Height="350px">
            </MudChart>
        </MudItem>
    }
</MudGrid>
