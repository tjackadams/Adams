@using Nexus.WeightTracker.Contracts;
@using Nexus.Portal.Features.Clients

@inherits BlazorStateComponent

<MudGrid Spacing="8">

    <MudItem Class="flex-grow-1">

    </MudItem>

    <MudItem Class="flex-shrink-0">
        @if (ClientState.Clients.Any())
        {

            <MudSelect T="Client" ValueChanged="@OnClientChanged" HelperText="Select a client"
                   Label="Client"
                   Variant="Variant.Text"
                   Style="min-width:260px;">

                @foreach (var client in ClientState.Clients)
                {
                    <MudSelectItem Value="client">@client.Name</MudSelectItem>
                }

            </MudSelect>
        }
    </MudItem>

    <MudItem Class="flex-shrink-0">
        <MudButton @onclick="OpenDialog"
                   Variant="Variant.Filled"
                   Color="@Color.Primary"
                   StartIcon="@Icons.Material.Filled.Add"
                   Class="mt-5 mr-5">Add new</MudButton>
    </MudItem>

</MudGrid>