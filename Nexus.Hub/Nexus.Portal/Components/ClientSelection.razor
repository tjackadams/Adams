@using Nexus.WeightTracker.Contracts;

<MudGrid Spacing="8">

    <MudItem Class="flex-grow-1">

    </MudItem>
    
    @if (_clientsLoading)
    {

    }
    else
    {

   

    <MudItem Class="flex-shrink-0">
        @if (_clients is not null)
        {

            <MudSelect T="GetClientList_ClientModel" ValueChanged="@OnClientChanged" HelperText="Select a client"
                   Label="Client"
                   Variant="Variant.Text">

                @foreach (var client in _clients.Data)
                {
                    <MudSelectItem Value="client">@client.Name</MudSelectItem>
                }

            </MudSelect>
        }
    </MudItem>

    <MudItem Class="flex-shrink-0">
        <MudButton @onclick="OpenDialog"
                   Variant="Variant.Filled"
                   Color="@Color.Primary"
                   StartIcon="@Icons.Material.Filled.Add"
                   Class="mt-5 mr-5">Add new</MudButton>
    </MudItem>
    }
</MudGrid>