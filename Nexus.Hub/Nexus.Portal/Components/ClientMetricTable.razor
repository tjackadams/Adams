@using Nexus.WeightTracker.Contracts
@using Nexus.Portal.Features.Clients

@inherits BlazorStateComponent

@if (CurrentClient is not null)
{
    <MudGrid>
        <MudItem>
            <MudButton @onclick="OpenDialog" StartIcon="@Icons.Material.Filled.Add">
                New Measurement
            </MudButton>
        </MudItem>
    </MudGrid>
    <MudDataGrid Items="CurrentClientMetrics">
        <Columns>
            <PropertyColumn Property="x => x.RecordedDate" Title="Recorded Date"></PropertyColumn>
            <PropertyColumn Property="x => x.RecordedValueMetric" Title="Recorded Value (KG)"></PropertyColumn>
        </Columns>
    </MudDataGrid>
}
