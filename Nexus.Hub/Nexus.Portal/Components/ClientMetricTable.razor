@using Nexus.WeightTracker.Contracts
@using Nexus.Portal.Features.Clients

@inherits BlazorStateComponent

@if (CurrentClient is not null)
{
    <MudGrid>
        <MudItem>
            <MudButton @onclick="OpenDialog" StartIcon="@Icons.Material.Filled.Add">
                New Measurement
            </MudButton>
        </MudItem>
    </MudGrid>
    <MudDataGrid Items="CurrentClientMetrics">
        <Columns>
            <Column T="ClientMetric" Field="RecordedDate" FieldType="typeof(DateOnly)" Title="Recorded Date"></Column>
            <Column T="ClientMetric" Field="RecordedValueMetric" FieldType="typeof(double)" Title="Recorded Value (KG)"></Column>
        </Columns>
    </MudDataGrid>
}
