@inherits LayoutComponentBase

<PageTitle>Nexus.Portal</PageTitle>

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudSwitch CheckedChanged="@(DarkModeToggle)" Color="Color.Primary" T="bool" Label="@(_isDarkMode ? "Dark" : "Light")" LabelPosition="LabelPosition.End" />
        <LoginDisplay />     
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Nexus</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="pa-4">
            @Body
        </MudContainer> 
    </MudMainContent>
</MudLayout>