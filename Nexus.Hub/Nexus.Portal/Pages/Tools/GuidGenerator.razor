@page "/tools/guid"

<MudGrid Justify="Justify.SpaceEvenly">
    <MudItem xs="12">
        <MudStack Row="true" Justify="Justify.Center">
            <MudSpacer/>
            <MudTextField @bind-Value="@Value"
                          ReadOnly="true"
                          Adornment="Adornment.End"
                          AdornmentIcon="@Icons.Material.Filled.ContentCopy"
                          OnAdornmentClick="@(OnCopy)"/>
            <MudSpacer/>
        </MudStack>
    </MudItem>
    <MudItem xs="12">
        <MudStack Row="true" Justify="Justify.SpaceEvenly">
            <MudSwitch @bind-Checked="@_settings.Uppercase" @bind-Checked:after="FormatAsync" Label="@(_settings.Uppercase ? "Uppercase" : "Lowercase")" T="bool"/>
            <MudSwitch @bind-Checked="@_settings.Brackets" @bind-Checked:after="FormatAsync" Label="@(_settings.Brackets ? "Include Brackets" : "Exclude Brackets")" T="bool" />
            <MudSwitch @bind-Checked="@_settings.Hyphens" @bind-Checked:after="FormatAsync" Label="@(_settings.Hyphens ? "Include Hyphens" : "Exclude Hyphens")" T="bool" />
        </MudStack>
    </MudItem>
    <MudItem xs="12">
        <MudStack Row="true" Justify="Justify.Center">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(GenerateAsync)">Generate</MudButton>
        </MudStack>
    </MudItem>
</MudGrid>