@using WebBlazor.Client.Pages.Smoker

<div class="row">
    <div class="col-auto text-center flex-column d-none d-sm-flex">
        <div class="row h-50">
            <div class="col @(IsFirstItem ? string.Empty : "border-right")">&nbsp;</div>
            <div class="col">&nbsp;</div>
        </div>
        <h5 class="m-2">
            <span class="badge badge-pill border @(IsFirstItem ? "bg-success" : "bg-light")">&nbsp;</span>
        </h5>
        <div class="row h-50">
            <div class="col @(IsLastItem ? string.Empty : "border-right")">&nbsp;</div>
            <div class="col">&nbsp;</div>
        </div>
    </div>
    <div class="col py-2">
        <div class="card @(IsFirstItem ? "border-success shadow" : string.Empty)">
            <div class="card-body">
                @*<div class="float-right text-muted">Mon, Jan 9th 2020 7:00 AM</div>*@
                <h4 class="card-title @(IsFirstItem ? "text-success" : "text-muted")">
                    Step @Item.Step
                </h4>
                <p class="card-text">
                    @Item.Description
                </p>

                @if (Item.GrillTemperature.HasValue)
                {
                <p class="card-text">
                    <WebBlazor.Client.Components.Timeline.TimelineTemperature Item="@Item" />
                </p>
                }

            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public Details.Query.QueryStep Item { get; set; }

    [Parameter]
    public bool IsLastItem { get; set; }

    [Parameter]
    public bool IsFirstItem { get; set; }
}