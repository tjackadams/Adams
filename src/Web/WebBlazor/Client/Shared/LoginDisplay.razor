@inject NavigationManager Navigation
@inject SignOutSessionStateManager SignOutManager

<AuthorizeView>
    <Authorized>
        <BSDropdown Class="mr-5">
            <BSDropdownToggle Size="Size.Small" Color="Color.Light">@context.User.Identity.Name</BSDropdownToggle>
            <BSDropdownMenu>
                <BSDropdownItem @onclick="BeginSignOut"><i class="fas fa-sign-out-alt fa-sm fa-fw mr-2"></i>&nbsp; Log out</BSDropdownItem>
            </BSDropdownMenu>
        </BSDropdown>
    </Authorized>
    <NotAuthorized>
        <a href="authentication/login">Log in</a>
    </NotAuthorized>
</AuthorizeView>

@code{

    private async Task BeginSignOut(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        Navigation.NavigateTo("authentication/logout");
    }

}